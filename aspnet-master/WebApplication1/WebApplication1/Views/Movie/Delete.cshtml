@model WebApplication1.Models.MvcMovie.Models.Movie
@{
    ViewBag.Title = "Delete";
}

<h2>Delete</h2>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        <h4>Movie</h4>
        <hr />
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.ID)

        <div class="form-group">

            <div class="col-md-10">
                <td>  @Html.DisplayFor(model => model.Title)</td>
            </div>
        </div>
        <div class="form-group">

            <div class="col-md-10">
               
                <td>  @Html.DisplayFor(model => model.Genre)</td>
            </div>
        </div>
        <div class="form-group">

            <div class="col-md-10">
                <td>  @Html.DisplayFor(model => model.Price)</td>

            </div>
        </div>


        @*Genre and Price removed for brevity.*@
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Delete" class="btn btn-default" />
            </div>
        </div>
    </div>
}
<div>
    @Html.ActionLink("Back to List", "Index")
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

